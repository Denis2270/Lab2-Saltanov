<Window x:Class="WindowSaltanovD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowSaltanovD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="188"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1"
                Grid.Row="1"
                Content="Открыть первое окно"
                Click="OpenFirstWindow"/>

        <Button Grid.Column="3"
                Grid.Row="1"
                Content="Открыть второе окно"
                Click="OpenSecondWindow"/>

        <Button Grid.Column="5"
                Grid.Row="1"
                Content="Открыть третье окно"
                Click="OpenThirdWindow"/>
    </Grid>
</Window>
